<div class="container-fluid mt-4">
      <div class="alert alert-dismissable alert-success">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
        Signed in successfully.
      </div>    

<div class="row mt-2 mb-1">
  <div class="col-md-3">
    <%= search_form_for @q, :class => "collapse", :id => "venues_filters" do |f| %>
      <p class="lead">Narrow results:</p>

        <div class="form-group">
    <%= f.label :name_cont, "Name contains" %>
    <%= f.text_field :name_cont, :class => "form-control", :placeholder => "Name contains" %>
  </div>

      <script type="text/javascript">
          $(function () {
              $('#created_atgteqPicker').datetimepicker({
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atlteqPicker').datetimepicker({
                  useCurrent: false,
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atgteqPicker').on("dp.change", function (e) {
                  $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#created_atlteqPicker').on("dp.change", function (e) {
                  $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

    <div class="form-group">
      <%= f.label :bookmarks_notes_cont, "Bookmarked dish name contains" %>
      <%= f.text_field :bookmarks_notes_cont, :class => "form-control", :placeholder => "Bookmarked dish name contains" %>
    </div>

    <div class="form-group">
      <%= f.label :neighborhood_name_cont, "Neighborhood name contains" %>
      <%= f.text_field :neighborhood_name_cont, :class => "form-control", :placeholder => "Neighborhood name contains" %>
    </div>

      <%= f.submit :class => "btn btn-primary btn-block mb-1" %>
    <a href="/venues" class="btn btn-secondary btn-block mb-1">Clear filters</a>
    <% end %>
    <a class="btn btn-secondary btn-block mb-1" data-toggle="collapse" href="#venues_filters">
      Show Filters
    </a>
  </div>
</div>


<div class="col-md-6">
  <div class="card">
    <div class="card-header">
      <h4 class="card-title">
        Places you've bookmarked
      </h4>
    </div>
  
  
  <div class="card-body">
    <div id="location_map" style="height: 480px;"></div>
  </div>

   <% @bookmarks.each do |bookmark| %>
        <% if current_user.id == bookmark.user_id %>
        <ul class="list-group list-group-flush">
        <li class="list-group-item">
          <a href="/venues/<%= bookmark.id %>">
            <%= Venue.find(bookmark.id).name %>
          </a>
          
        <small class="text-muted float-right">
        <% if Venue.find(bookmark.id).neighborhood.present? %>
              <%= Venue.find(bookmark.id).neighborhood.name %>
        <% end %>
        </small>
        </li>
        </ul>
        <% else %>
        <% end %>
        
      <% end %>
      </div>
  <div class="card-footer text-center">
  </div>
</div>
</div>
<div >
  
  <div class="col-md-3">
    <a href="/venues/new" class="btn btn-block btn-success">
      Add a new venue
    </a>
  </div>
    
</div>
<script src="//maps.google.com/maps/api/js?v=3.24&key=AIzaSyCOTPWiuvyyo6sKoIBzKA4-1ol-vTOIOlM"></script>
<script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>
<script>
  handler = Gmaps.build('Google');
  handler.buildMap({ provider: {}, internal: {id: 'location_map'}}, function(){
    markers = handler.addMarkers(<%= raw @location_hash.to_json %>);
    handler.bounds.extendWith(markers);
    handler.fitMapToBounds();
  });
</script>